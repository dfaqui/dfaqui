.ui.middle.aligned.center.aligned.grid
  .column{ style: 'max-width: 480px' }
    %h2.ui.header
      .content Acessar o DFaqui

    = simple_form_for(resource, as: resource_name, url: session_path(resource_name),
        html: { class: 'ui big form'} ) do |f|

      - flash.each do |key, value|
        - if key == 'alert'
          %p= value

      .ui.stacked.segment
        .field
          .ui.left.icon.input
            %i.user.icon
            = f.input_field :email, autofocus: true, placeholder: 'E-mail'
        .field
          .ui.left.icon.input
            %i.lock.icon
            = f.input_field :password, placeholder: 'Senha'
        .field
          = f.button :button, class: ' ui fluid large primary submit button' do
            ENTRAR
        .field
          = link_to user_facebook_omniauth_authorize_path,
              class: 'ui facebook button' do

            %i.facebook.icon
            Entrar com o Facebook

          = link_to user_google_oauth2_omniauth_authorize_path,
              class: 'ui google plus button' do

            %i.google.icon
            Entrar com o Google

    .ui.message
      NÃ£o tem um login?
      = link_to 'Cadastre-se', new_registration_path(resource_name)
