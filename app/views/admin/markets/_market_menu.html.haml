- details_path = (market_id.present?) ? edit_admin_customer_market_path(customer_id, market_id) : new_admin_customer_market_path(customer_id)

.ui.seven.mini.steps
  = link_to admin_customer_path(customer_id), class: 'step' do
    %i.file.text.outline.icon
    .content
      .title Informações

  = link_to details_path, class: 'step' do
    %i.sticky.note.icon
    .content
      .title Detalhes

  - categories_path = (market_id.present?) ? admin_customer_market_categories_path(customer_id, market_id) : nil
  = link_to categories_path, class: "step #{ 'disabled' if market_id.nil? }" do
    %i.tags.icon
    .content
      .title Tipos e Especialidades

.ui.hidden.divider
