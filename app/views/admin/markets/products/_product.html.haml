%tr
  %td
    = image_tag product.photo_url, class: 'ui tiny image'
  %td= product.name
  %td= truncate(product.description)
  %td= humanized_money_with_symbol product.price_cents
  %td= product.status
  %td
    .ui.icon.top.right.pointing.dropdown.primary.tiny.button
      %i.setting.icon
      .menu
        = link_to edit_admin_customer_market_product_path(@market.customer_id, @market.id, product.id),
            class: 'item' do
          %i.edit.icon
          Editar

        = link_to admin_customer_market_product_path(@market.customer_id, @market.id, product.id),
            data: { confirm: 'Tem certeza de que deseja remover esse produto?' },
            method: :delete, class: 'item' do
          %i.remove.icon
          Remover
