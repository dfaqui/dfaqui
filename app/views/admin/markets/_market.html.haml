%tr
  %td= "##{market.id}"
  %td= market.customer.fantasy_name
  %td= market.customer.full_address
  %td= market.customer.block.district.district_group.city.name
  %td= market.customer.status_text
  %td
    .ui.primary.buttons
      = link_to 'Detalhes', admin_market_path(market.id), class: 'ui button'

      .ui.floating.dropdown.icon.button
        %i.dropdown.icon
        .menu
          = link_to edit_admin_market_path(market.id), class: 'item' do
            %i.edit.icon
            Editar

          = link_to admin_market_path(market.id), method: :delete,
              data: { confirm: 'Tem certeza de que deseja remover esse com√©rcio?' },
              class: 'item' do

            %i.delete.icon
            Remover
  
