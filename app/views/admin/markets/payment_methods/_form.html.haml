= simple_form_for([:admin, @market, @market.payment_methods.build], html: { class: 'ui form' }) do |f|
  .required.field
    = f.label :id, 'Forma de pagamento'
    = f.input_field :id, collection: PaymentMethod.all,
      include_blank: false, class: 'ui search dropdown'

  .field
    = f.button :button, class: 'ui primary button' do
      %i.save.icon
      Salvar
