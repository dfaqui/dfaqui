.ui.clearing.segment
  %b= category.name
  %b
    = link_to 'Remover', admin_category_path(category.id, market_id: @market.id),
      data: { confirm: 'Tem certeza de que deseja remover esse tipo?' },
      method: :delete, style: 'float: right'

  - specialities = @market.specialities.where(category: category)

  - if specialities.any?
    .ui.middle.aligned.list
      = render specialities

  .ui.divider

  = link_to 'Adicionar especialidade',
    new_admin_market_speciality_path(@market.id, category_id: category.id),
    remote: true, id: "speciality-btn-#{category.id}"
