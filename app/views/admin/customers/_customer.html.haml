%tr
  %td= customer.name
  %td= "#{customer.full_address} (#{customer.block.district.district_group.city.name})"
  %td= customer.status
  %td
    .ui.icon.top.right.pointing.dropdown.primary.tiny.button
      %i.setting.icon
      .menu
        = link_to admin_customer_common_customer_path(customer.customer_common_id, customer.id),
            class: 'item' do
          %i.search.icon
          Detalhes

        = link_to edit_admin_customer_common_customer_path(customer.customer_common_id, customer.id),
            class: 'item' do
          %i.edit.icon
          Editar

        = link_to admin_customer_common_customer_path(customer.customer_common_id, customer.id),
            method: :delete, class: 'item',
            data: { confirm: 'Tem certeza de que deseja remover essa filial?' } do
          %i.remove.icon
          Remover
