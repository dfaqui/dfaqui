%tr
  %td= customer.fantasy_name
  %td= customer.name
  %td= customer.full_address
  %td= customer.status_text
  %td
    .ui.icon.top.right.pointing.dropdown.primary.tiny.button
      %i.setting.icon
      .menu
        = link_to admin_customer_path(customer.id), class: 'item' do
          %i.search.icon
          Detalhes

        = link_to edit_admin_customer_path(customer.id), class: 'item' do
          %i.edit.icon
          Editar

        = link_to admin_customer_path(customer.id), method: :delete, class: 'item',
            data: { confirm: 'Tem certeza de que deseja remover esse cliente?' } do
          %i.remove.icon
          Remover
