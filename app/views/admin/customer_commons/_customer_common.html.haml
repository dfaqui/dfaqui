%tr
  %td= image_tag customer_common.logo, class: 'ui tiny image'
  %td= customer_common.fantasy_name
  %td= customer_common.plugin_text
  %td= customer_common.status
  %td
    .ui.icon.top.right.pointing.dropdown.primary.tiny.button
      %i.setting.icon
      .menu
        = link_to admin_customer_common_path(customer_common.id),
            class: 'item' do
          %i.search.icon
          Detalhes

        = link_to admin_customer_common_customers_path(customer_common.id),
            class: 'item' do
          %i.external.icon
          Filiais

        = link_to edit_admin_customer_common_path(customer_common.id),
            class: 'item' do
          %i.edit.icon
          Editar

        = link_to admin_customer_common_path(customer_common.id), method: :delete,
            data: { confirm: 'Tem certeza de que deseja remover esse cliente?' },
            class: 'item' do
          %i.remove.icon
          Remover
