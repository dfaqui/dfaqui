%tr
  %td= property.full_address
  %td= property.block.district.district_group.city.name
  %td= property.customer.name
  %td= property.property_type_text
  %td= property.commercial_situation_text
  %td= property.release_status_text
  %td= property.status
  %td
    .ui.icon.top.right.pointing.dropdown.primary.tiny.button
      %i.setting.icon
      .menu
        .item
          %i.search.icon
          Detalhes

        = link_to admin_property_property_images_path(property.id), class: 'item' do
          %i.image.icon
          Gerenciar imagens

        = link_to edit_admin_property_path(property.id), class: 'item' do
          %i.edit.icon
          Editar

        = link_to admin_property_path(property.id), method: :delete, class: 'item',
            data: { confirm: 'Tem certeza de que deseja remover esse im√≥vel?' } do
          %i.remove.icon
          Remover
